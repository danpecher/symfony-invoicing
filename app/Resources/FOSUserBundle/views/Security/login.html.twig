{% extends '@FOSUser/layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input class="input" type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}

        <label class="label" for="username">{{ 'security.login.username'|trans }}</label>
        <input class="input" type="text" id="username" name="_username" value="{{ last_username }}"
               required="required"/>

        <label class="label" for="password">{{ 'security.login.password'|trans }}</label>
        <input class="input" type="password" id="password" name="_password" required="required"/>

        <label class="checkbox">
            <input id="remember_me" name="_remember_me" value="on" type="checkbox">
            {{ 'security.login.remember_me'|trans }}
        </label>

        <div>
            <input class="button is-success" type="submit" id="_submit" name="_submit"
                   value="{{ 'security.login.submit'|trans }}"/>
        </div>
    </form>

{% endblock %}